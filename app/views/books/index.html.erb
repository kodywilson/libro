<div class="books">
<% @books.each do |book| %>
  <div class="book">
    <h2><%= link_to book.title, book %></h2>
    <p>Cover: <%= image_tag(book.picture_url, :width => 100) if book.picture.present? %></p>
    <p>Author: <%= link_to book.author, book %> |
    ISBN: <%= link_to book.isbn, book %> |
    Summary: <%= link_to book.summary, book %></p>
    <%= link_to "Edit", edit_book_path(book), class: "sho_button" %> |
    <%= link_to "Remove", book, method: "delete", confirm: "Are you sure?", class: "nuke_button" %>
  </div>
<% end %>
</div>

<% if user_signed_in? %>
  <p><%= link_to 'Add Book', new_book_path, class: "new_book" %></p>
<% else %>
<% end %>
